<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.SelectionViewController" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f4f4f4;">
    <center>
        <VBox spacing="20" alignment="CENTER">
            <children>
                <Label text="Select a View" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                <Button fx:id="ceoButton" text="CEO View" onAction="#handleCEOButton" style="-fx-font-size: 16px; -fx-padding: 10 20;"/>
                <Button fx:id="staffButton" text="Staff View" onAction="#handleStaffButton" style="-fx-font-size: 16px; -fx-padding: 10 20;"/>
            </children>
        </VBox>
    </center>
</BorderPane> 