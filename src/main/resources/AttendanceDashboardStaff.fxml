<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>

<BorderPane prefHeight="800.0" prefWidth="1400.0" styleClass="root-pane" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.AttendanceDashboardController">
   <top>
      <HBox alignment="CENTER" styleClass="navbar" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
               <children>
                  <Label styleClass="logo" text="SH" />
                  <HBox alignment="CENTER_LEFT" spacing="40.0">
                     <children>
                        <Button mnemonicParsing="false" styleClass="nav-link" text="Dashboard" />
                        <Button mnemonicParsing="false" styleClass="nav-link" text="Project" />
                        <Button mnemonicParsing="false" styleClass="nav-link" text="Attendance" />
                        <Button mnemonicParsing="false" styleClass="nav-link" text="Schedule" />
                     </children>
                     <HBox.margin>
                        <Insets left="40.0" />
                     </HBox.margin>
                  </HBox>
               </children>
            </HBox>
            <Region HBox.hgrow="SOMETIMES" />
            <HBox alignment="CENTER_RIGHT" spacing="20.0">
               <children>
                  <VBox alignment="CENTER_RIGHT">
                     <children>
                        <Label fx:id="userNameLabel" styleClass="user-name" text="Reffy Mahardika" />
                        <Label fx:id="userRoleLabel" styleClass="user-role" text="Staff" />
                     </children>
                  </VBox>
                  <Circle fx:id="profileCircle" radius="25" styleClass="profile-pic" />
               </children>
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <GridPane styleClass="dashboard-grid" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" percentWidth="32.0" />
          <ColumnConstraints hgrow="SOMETIMES" percentWidth="68.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <!-- Left Column - Attendance Table with proper spacing -->
            <VBox styleClass="card" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
               <children>
                  <!-- FIXED: Time In alignment issue -->
                  <HBox alignment="CENTER_LEFT" styleClass="table-header">
                     <children>
                        <Label text="Date" />
                        <Label styleClass="sort-icon" text="↕" />
                        <Region HBox.hgrow="ALWAYS" />
                        <!-- Fixed alignment by using HBox for Time In section -->
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                           <children>
                              <Label text="Time In" />
                              <Label styleClass="sort-icon" text="↕" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
                  <ScrollPane fitToWidth="true" styleClass="table-records-pane" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox fx:id="attendanceRecordsVBox" spacing="8.0" />
                     </content>
                  </ScrollPane>
                  <HBox alignment="CENTER_LEFT" spacing="30.0" styleClass="table-legend">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Circle radius="5" styleClass="status-dot-on-time" />
                              <Label text="On Time" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Circle radius="5" styleClass="status-dot-absent" />
                              <Label text="Absent" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
               </padding>
               <GridPane.margin>
                  <Insets right="20.0" />
               </GridPane.margin>
            </VBox>
            
            <!-- Right Column -->
            <VBox spacing="25.0" GridPane.columnIndex="1">
               <children>
                  <!-- Top Row - Three Cards -->
                  <HBox spacing="25.0">
                     <!-- FIXED: On Time Percentage - moved percentage next to title -->
                     <VBox styleClass="card" HBox.hgrow="ALWAYS">
                        <children>
                           <!-- New layout with title and percentage side by side -->
                           <HBox alignment="CENTER_LEFT" spacing="10.0">
                              <children>
                                 <VBox>
                                    <children>
                                       <Label styleClass="stat-title" text="On Time Percentage" />
                                       <Label styleClass="stat-month" text="February" />
                                    </children>
                                 </VBox>
                                 <Region HBox.hgrow="ALWAYS" />
                                 <Label fx:id="onTimePercentageLabel" styleClass="stat-percentage" text="24%" />
                              </children>
                           </HBox>
                           <!-- Chart with more space -->
                           <LineChart fx:id="onTimeLineChart" prefHeight="120" maxHeight="120.0" prefWidth="280.0" maxWidth="280.0">
                              <xAxis>
                                 <CategoryAxis fx:id="onTimeXAxis" side="BOTTOM" />
                              </xAxis>
                              <yAxis>
                                 <NumberAxis fx:id="onTimeYAxis" side="LEFT" lowerBound="0" upperBound="100" tickUnit="20" />
                              </yAxis>
                           </LineChart>
                        </children>
                        <padding>
                           <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                        </padding>
                     </VBox>
                     
                     <!-- FIXED: Late Percentage - moved percentage next to title -->
                     <VBox styleClass="card" HBox.hgrow="ALWAYS">
                        <children>
                           <!-- New layout with title and percentage side by side -->
                           <HBox alignment="CENTER_LEFT" spacing="10.0">
                              <children>
                                 <VBox>
                                    <children>
                                       <Label styleClass="stat-title" text="Late Percentage" />
                                       <Label styleClass="stat-month" text="February" />
                                    </children>
                                 </VBox>
                                 <Region HBox.hgrow="ALWAYS" />
                                 <Label fx:id="latePercentageLabel" styleClass="stat-percentage" text="76%" />
                              </children>
                           </HBox>
                           <!-- Chart with more space -->
                           <LineChart fx:id="lateLineChart" prefHeight="120" maxHeight="120.0" prefWidth="280.0" maxWidth="280.0">
                              <xAxis>
                                 <CategoryAxis fx:id="lateXAxis" side="BOTTOM" />
                              </xAxis>
                              <yAxis>
                                 <NumberAxis fx:id="lateYAxis" side="LEFT" lowerBound="0" upperBound="100" tickUnit="20" />
                              </yAxis>
                           </LineChart>
                        </children>
                        <padding>
                           <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                        </padding>
                     </VBox>
                     
                     <!-- Salary Card -->
                     <VBox styleClass="card" HBox.hgrow="ALWAYS">
                        <children>
                           <VBox styleClass="salary-description">
                              <children>
                                 <Label text="Based by your Attendance" />
                                 <Label text="Here is your monthly salary" />
                              </children>
                           </VBox>
                           <Region VBox.vgrow="ALWAYS" />
                           <Label fx:id="salaryAmountLabel" styleClass="salary-amount" text="IDR ********" />
                           <Region VBox.vgrow="ALWAYS" />
                           <Button fx:id="viewSalaryButton" mnemonicParsing="false" onAction="#handleViewSalary" styleClass="view-button" text="View" />
                        </children>
                        <padding>
                           <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                        </padding>
                     </VBox>
                  </HBox>
                  
                  <!-- Bottom Row - Clock Display -->
                  <VBox styleClass="card" VBox.vgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER" spacing="80.0" VBox.vgrow="ALWAYS">
                           <!-- Left side - Clock -->
                           <VBox alignment="CENTER" spacing="25.0" HBox.hgrow="ALWAYS">
                              <children>
                                 <Canvas fx:id="analogClockCanvas" height="220.0" width="220.0" />
                                 <Label fx:id="digitalTimeLabel" styleClass="digital-time" text="12 : 16 PM" />
                              </children>
                           </VBox>
                           
                           <!-- Right side - Working Hours and Check In -->
                           <VBox alignment="CENTER" spacing="40.0" HBox.hgrow="ALWAYS">
                              <children>
                                 <VBox alignment="CENTER" styleClass="working-hours-box">
                                    <children>
                                       <Label styleClass="working-title" text="Working Hours" />
                                       <Label fx:id="workingTimeLabel" styleClass="working-time" text="0 Hr 00 Mins 00 Secs" />
                                    </children>
                                    <padding>
                                       <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                                    </padding>
                                 </VBox>
                                 <Button fx:id="checkButton" mnemonicParsing="false" onAction="#toggleCheckIn" styleClass="check-button-in" text="Check In" />
                              </children>
                           </VBox>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </GridPane>
   </center>
</BorderPane>
