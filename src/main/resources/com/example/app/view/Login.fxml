<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app.controller.LoginController"
      alignment="CENTER" spacing="20" style="-fx-background-color: #f4f4f4; -fx-padding: 50;">

    <Label text="Talent Tracker Login" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <VBox alignment="CENTER_LEFT" spacing="10" maxWidth="300">
        <Label text="Select Your Role:"/>
        <ComboBox fx:id="roleComboBox" promptText="Choose a role" style="-fx-pref-width: 300;"/>
    </VBox>

    <Button text="Login" onAction="#handleLoginButtonAction" style="-fx-font-size: 14px;"/>

</VBox> 