<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<HBox alignment="CENTER_LEFT" spacing="50" style="-fx-background-color: #223055; -fx-padding: 20 30 20 30;" 
      xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.talenttracker.controller.HeaderController">
    <!-- Left side: Logo and Navigation -->
    <HBox spacing="50" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
        <ImageView fx:id="logoImage" fitWidth="60" fitHeight="60" preserveRatio="true"/>
        
        <Label text="Dashboard" style="-fx-font-family: 'Gabarito-Regular'; -fx-text-fill: white; -fx-font-size: 14px;" styleClass="nav-item" onMouseClicked="#navigateToDashboard"/>
        <Label text="Project" style="-fx-font-family: 'Gabarito-Regular'; -fx-text-fill: white; -fx-font-size: 14px;" styleClass="nav-item" onMouseClicked="#navigateToProject"/>
        <Label text="Attendance" style="-fx-font-family: 'Gabarito-Regular'; -fx-text-fill: white; -fx-font-size: 14px;" styleClass="nav-item" onMouseClicked="#navigateToAttendance"/>
        <Label text="Schedule" style="-fx-font-family: 'Gabarito-Regular'; -fx-text-fill: white; -fx-font-size: 14px;" styleClass="nav-item" onMouseClicked="#navigateToSchedule"/>
    </HBox>
    
    <!-- Right side: Profile -->
    <HBox spacing="20" alignment="CENTER_RIGHT">
        <VBox alignment="CENTER_RIGHT">
            <Label fx:id="nameLabel" style="-fx-font-family: 'Gabarito-Medium'; -fx-text-fill: white; -fx-font-size: 14px;" styleClass="profile-name"/>
            <Label fx:id="roleLabel" style="-fx-font-family: 'Gabarito-Regular'; -fx-text-fill: #cccccc; -fx-font-size: 12px;" styleClass="profile-role"/>
        </VBox>
        <ImageView fx:id="profileImage" fitWidth="40" fitHeight="40" preserveRatio="true"/>
    </HBox>
</HBox> 