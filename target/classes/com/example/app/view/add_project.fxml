<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app.controller.AddProjectController"
      style="-fx-background-color: #FFB7CA;" spacing="10" prefWidth="400" alignment="TOP_CENTER"
      styleClass="root-container">

    <!-- <fx:include source="HeaderView.fxml" /> -->

    <Label text="Add New Project" styleClass="header-title"/>

    <VBox styleClass="form-container" spacing="15">

        <Label text="Project ID"/>
        <TextField fx:id="projectIdField" promptText="e.g., 101"/>

        <Label text="Project Name"/>
        <TextField fx:id="projectNameField" promptText="Enter the project name"/>

        <Label text="Project Description"/>
        <TextArea fx:id="projectDescriptionArea" promptText="Provide a detailed description" wrapText="true"/>

        <Label text="Project Type"/>
        <ComboBox fx:id="projectTypeComboBox" promptText="Select a project type"/>

        <Label text="CEO"/>
        <ComboBox fx:id="ceoComboBox" promptText="Select the CEO"/>

        <Label text="Staff"/>
        <ComboBox fx:id="staffComboBox" promptText="Select the Staff"/>

        <Label text="Start Date"/>
        <DatePicker fx:id="startDatePicker" promptText="Choose a start date"/>

        <Label text="End Date"/>
        <DatePicker fx:id="endDatePicker" promptText="Choose an end date"/>

        <Button fx:id="submitButton" text="Create New Project" onAction="#handleSubmitButtonAction" styleClass="submit-button"/>

    </VBox>
</VBox> 