<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.talenttracker.controller.DashboardController"
           style="-fx-background-color: #FFD6E8;">
    
    <!-- Header -->
    <top>
        <HBox style="-fx-background-color: #28304E; -fx-padding: 20; -fx-alignment: center-left;">
            <Label text="Talent Tracker" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
        </HBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <!-- Search Bar -->
            <HBox alignment="CENTER">
                <TextField promptText="Search Artist" prefWidth="400"
                         style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 10;"/>
            </HBox>
            
            <!-- Calendar and Stats -->
            <HBox spacing="20">
                <!-- Calendar Section -->
                <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;" prefWidth="350">
                    <Label text="Calendar" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #28304E;"/>
                    <GridPane fx:id="calendarGrid" style="-fx-padding: 10;"/>
                </VBox>
                
                <!-- Stats Section -->
                <HBox spacing="20" HBox.hgrow="ALWAYS">
                    <VBox style="-fx-background-color: #28304E; -fx-background-radius: 10; -fx-padding: 20;" HBox.hgrow="ALWAYS">
                        <Label fx:id="totalSalesLabel" text="$500k" 
                               style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
                        <Label text="Total Sales" style="-fx-text-fill: #B0B0B0;"/>
                    </VBox>
                    
                    <VBox style="-fx-background-color: #28304E; -fx-background-radius: 10; -fx-padding: 20;" HBox.hgrow="ALWAYS">
                        <Label fx:id="albumsSoldLabel" text="400" 
                               style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
                        <Label text="Albums Sold" style="-fx-text-fill: #B0B0B0;"/>
                    </VBox>
                    
                    <VBox style="-fx-background-color: #28304E; -fx-background-radius: 10; -fx-padding: 20;" HBox.hgrow="ALWAYS">
                        <Label fx:id="newVisitorsLabel" text="20020" 
                               style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
                        <Label text="New Visitors" style="-fx-text-fill: #B0B0B0;"/>
                    </VBox>
                </HBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>